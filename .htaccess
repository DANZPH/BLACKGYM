php_value date.timezone "Asia/Manila"

# Handle custom error pages
ErrorDocument 403 https://gym.dazx.xyz/404.php
ErrorDocument 404 https://gym.dazx.xyz/404.php
ErrorDocument 500 https://gym.dazx.xyz/404.php
# Enable mod_rewrite
RewriteEngine On
RewriteCond %{HTTP:X-Forwarded-Proto} !https
RewriteCond %{HTTPS} off
RewriteCond %{HTTP:CF-Visitor} !{"scheme":"https"}
RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
# Remove .php extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]
# Redirect index.php to clean URL
RewriteCond %{THE_REQUEST} /index.php [NC]
RewriteRule ^(.*)index.php$ /$1 [L,R=301]
# Ensure trailing slash for directories
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^(.+[^/])$ $1/ [L,R=301]
# Prevent direct access to .htaccess itself
<Files .htaccess>
    Order Allow,Deny
        Deny from all
        </Files>
